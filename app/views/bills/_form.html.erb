<%= form_for(@bill) do |f| %>
  <% if @bill.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@bill.errors.count, "error") %> prohibited this bill from being saved:</h2>

      <ul>
      <% @bill.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <h2>Name your bill</h2>
  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>

  <h2>Put people on the bill</h2>
  <%= f.fields_for :people do |builder| %>
    <p>
      <%= builder.label :email %><br />
      <%= builder.text_field :email %>
    </p>
  <% end %>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
